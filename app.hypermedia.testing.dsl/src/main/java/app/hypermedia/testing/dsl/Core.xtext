grammar app.hypermedia.testing.dsl.Core with org.eclipse.xtext.common.Terminals

generate core "http://www.zazuko.com/apitesting/dsl/ApiTestingDsl"

Model:
    (steps+=Element)*;

Element:
	ClassBlock;

ClassLevelAssertion:
    PropertyBlock |
    PropertyStatement;
    
terminal WITH_MODIFIER: 'With';
terminal EXPECT_MODIFIER: 'Expect';
terminal MODIFIER: WITH_MODIFIER | EXPECT_MODIFIER;

ClassBlock:
	WITH_MODIFIER 'Class' name=STRING '{'
		(children+=ClassLevelAssertion)*
		hatch=HATCH?
	'}';

PropertyBlock:
    modifier=(WITH_MODIFIER | EXPECT_MODIFIER) 'Property' name=STRING '{'
        (children+=ClassLevelAssertion)*
        hatch=HATCH?
    '}'
;

PropertyStatement:
    EXPECT_MODIFIER 'Property' name=STRING (value=STRING)?
;

terminal HATCH: '++' -> '++';
